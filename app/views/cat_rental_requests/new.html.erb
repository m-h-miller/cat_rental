<h1>Make a new rental request!</h1>

<form action="<%=cat_rental_requests_url%>" method="POST">

  <label for="rental_choice">Choose cat</label>

  <select name="cat_rental_requests[cat_id]" id="rental_choice">
    <% @all_cats.each do |cat| %>
      <option value="<%=cat.id%>">
        <%=cat.name%>
      </option>
    <% end %>
  </select>

  <br>
  <br>

  <label for="rental_start_date">Choose start date</label>
  <br>
  <input type="date" name="cat_rental_requests[start_date]" id="rental_start_date" value="<%= @cat_rental_request.start_date %>">

  <br>
  <br>

  <label for="rental_end_date">Choose end date</label>
  <br>
  <input type="date" name="cat_rental_requests[end_date]" id="rental_end_date" value="<%= @cat_rental_request.end_date %>">

  <br>
  <br>

  <input type="submit" value="SUBMIT">
</form>
